<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".HomepageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4FFFD">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="291dp"
            android:layout_height="42dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:background="#5415A483"
            android:iconifiedByDefault="false"
            android:queryHint="What are you looking for?"
            android:textSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/FoodAndDrinks"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_food"
            app:layout_constraintEnd_toStartOf="@+id/Shopping"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food &amp; Drinks"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/FoodAndDrinks"
            app:layout_constraintStart_toStartOf="@+id/FoodAndDrinks"
            app:layout_constraintTop_toBottomOf="@+id/FoodAndDrinks" />

        <ImageButton
            android:id="@+id/Shopping"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_shopping"
            app:layout_constraintEnd_toStartOf="@+id/Transport"
            app:layout_constraintStart_toEndOf="@+id/FoodAndDrinks"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Shopping"
            app:layout_constraintStart_toStartOf="@+id/Shopping"
            app:layout_constraintTop_toBottomOf="@+id/Shopping" />

        <ImageButton
            android:id="@+id/Transport"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_transport"
            app:layout_constraintEnd_toStartOf="@+id/Education"
            app:layout_constraintStart_toEndOf="@+id/Shopping"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transport"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Transport"
            app:layout_constraintStart_toStartOf="@+id/Transport"
            app:layout_constraintTop_toBottomOf="@+id/Transport" />

        <ImageButton
            android:id="@+id/Education"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_education"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Transport"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Education"
            app:layout_constraintStart_toStartOf="@+id/Education"
            app:layout_constraintTop_toBottomOf="@+id/Education" />

        <ImageButton
            android:id="@+id/Health"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_health"
            app:layout_constraintEnd_toStartOf="@+id/Hotels"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/FoodAndDrinks"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Health"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Health"
            app:layout_constraintStart_toStartOf="@+id/Health"
            app:layout_constraintTop_toBottomOf="@+id/Health" />

        <ImageButton
            android:id="@+id/Hotels"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_hotel"
            app:layout_constraintEnd_toEndOf="@+id/Shopping"
            app:layout_constraintStart_toStartOf="@+id/Shopping"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Hotels"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Hotels"
            app:layout_constraintStart_toStartOf="@+id/Hotels"
            app:layout_constraintTop_toBottomOf="@+id/Hotels" />

        <ImageButton
            android:id="@+id/Finance"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_finance"
            app:layout_constraintEnd_toEndOf="@+id/Transport"
            app:layout_constraintStart_toStartOf="@+id/Transport"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Finance"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Finance"
            app:layout_constraintStart_toStartOf="@+id/Finance"
            app:layout_constraintTop_toBottomOf="@+id/Finance" />

        <ImageButton
            android:id="@+id/Authorties"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/roundbtn"
            android:src="@drawable/ic_authorities"
            app:layout_constraintEnd_toEndOf="@+id/Education"
            app:layout_constraintStart_toStartOf="@+id/Education"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Authorities"
            android:textSize="14dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintEnd_toEndOf="@+id/Authorties"
            app:layout_constraintStart_toStartOf="@+id/Authorties"
            app:layout_constraintTop_toBottomOf="@+id/Authorties" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="193dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/app_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/NewsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="48dp"
            android:text="News"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="31dp"
            android:layout_marginBottom="48dp"
            android:text="Home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/settingButton"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toEndOf="@+id/NewsButton"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="48dp"
            android:text="Settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>